<html>
  <head>
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" media="all">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto+Slab" media="all">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/icon?family=Material+Icons" media="all">
    <%= stylesheet_link_tag "#{ENV['HOST']}#{stylesheet_url('application')}", media: 'all' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" media="all">
  </head>
  <body>

    <nav class="navbar navbar-inverse navbar-fixed-top hidden-print" role="navigation-demo">
      <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <% if @company %>
            <div class="brand-logo-link">
              <span><%= link_to "<i class='icon-jtrpv2-allwhite-noname' style='font-size: 43pt'></i>".html_safe, root_url, class: "navbar-brand" %></span>
              <span><%= link_to @company.name, root_url, class: "navbar-brand" %></span>
            </div>
          <% end %>
        </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to 'Sign In', new_user_session_url %></li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-->
    </nav>

    <%= yield %>

  </body>
</html>
