<div class="container-fluid">

  <div class="row text-center">
    <div class="col-md-8 col-md-offset-2 col-xs-12">
      <%= render 'header_cards', account: @account, client: @client %>
    </div>
  </div>

  <div class="row large-top-margin">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <div class="well">
        <div class="row text-center vertical-align">

          <div class="col-md-4 hidden-xs">
            <% if @client.avatar.present? %>
              <%= image_tag(@client.avatar_url(client_hints: true, quality: "auto", fetch_format: :auto, dpr: "auto"), class: "thumb", alt: "Client Avatar") %>
            <% else %>
              <%= image_tag("thumb_default_avatar.png", class: "thumb", alt: "Client Avatar") %>
            <% end %>
          </div>

          <div class="col-xs-12 col-md-4">
            <div class="list-group">

              <div class="list-group-item">
                <div class="row-action-primary">
                  <i class="material-icons">email</i>
                </div>
                <div class="row-content">
                  <h4 class="list-group-item-heading"><%= @client.email %></h4>
                </div>
              </div>

              <div class="list-group-separator"></div>

              <div class="list-group-item">
                <div class="row-action-primary">
                  <i class="material-icons">map</i>
                </div>
                <div class="row-content">
                  <%=
                    link_to(
                      "<h4 class='list-group-item-heading'> #{@client.address_1} </h4>
                      <p class='list-group-item-text'> #{@client.address_2} </p>
                      <p class='list-group-item-text'> #{@client.city}, #{@client.state} #{@client.zip} </p>".html_safe,
                      "http://maps.google.com/?q=#{@client.address_string}", class: "address_link"
                    )
                  %>
                </div>
              </div>

              <div class="list-group-separator"></div>

              <div class="list-group-item">
                <div class="row-action-primary">
                  <i class="material-icons">phone</i>
                </div>
                <div class="row-content">
                  <h4 class="list-group-item-heading"><%= number_to_phone(@client.phone, area_code: true) %></h4>
                  <p class="list-group-item-text"><%= @client.phone_ext %></p>
                </div>

              </div>

            </div>
          </div>
          <div class="col-md-4 hidden-xs">
            <%= image_tag(@maps_url, class: "map", alt: "Client Address") %>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
