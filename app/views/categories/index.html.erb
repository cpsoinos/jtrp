<%
  meta title: "Categories - #{@company.name}",
       description: "Browse items by category",
       keywords: @categories.pluck(:name)
%>

<div class="profile-page">

  <div class="profile-content">
    <div class="container-fluid">
      <div class="container-fluid">
        <h2 class="section-title title">Shop by category...</h2>
        <div class="row">
          <div class="col-md-12">
            <div class="row">
              <%= render partial: "categories/category", collection: @categories.primary, cached: true %>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>

</div>
