<div class="page-header header-filter clear-filter background-image" data-parallax="active"></div>

<div class="row over-background">
  <div class="col-xs-12 text-center">
    <h1 class="company-title"><%= @company.name %></h1>
    <h4><%= @company.slogan %></h4>
  </div>
</div>

<div class="main main-raised extra-large-top-margin">
  <div class="container">

    <div class="features">
			<div class="row text-center">
				<div class="col-md-4">
          <a href="<%= items_path(status: 'active') %>">
            <div class="info">
              <div class="icon icon-info">
                <i class="material-icons">store</i>
              </div>
              <h4 class="info-title">Shop</h4>
              <p>Browse through our store to find just the right piece for your home, office, or just about any space. Our inventory is constantly changing!</p>
            </div>
          </a>
				</div>

				<div class="col-md-4">
					<div class="info">
						<div class="icon icon-success">
							<i class='fa fa-credit-card-alt' aria-hidden='true'></i>
						</div>
						<h4 class="info-title">Sell</h4>
						<p>Downsizing? Moving? Sell us your furniture!</p>
					</div>
				</div>

				<div class="col-md-4">
					<div class="info">
						<div class="icon icon-danger">
							<i class="material-icons">supervisor_account</i>
						</div>
						<h4 class="info-title">Consign</h4>
						<p>Downsizing or moving, but not sure you want to sell your furniture outright? Consign with us!</p>
					</div>
				</div>
      </div>
		</div>

    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <h2>Some of Our Items</h2>
        <div class="row vertical-align">
          <% @items.each do |item| %>
            <div class="col-md-4">
              <a href="<%= item_path(item) %>">
            		<div class="card card-plain card-blog">
            			<div class="card-image">
                    <%= image_tag(item.featured_photo_url, class: "img img-raised") %>
            			</div>

            			<div class="content">
                    <% if item.listing_price %>
                      <h6><%= humanized_money_with_symbol(item.listing_price) %></h6>
                    <% end %>
            				<h4 class="card-title">
            					<%= item.description %>
            				</h4>
            				<!-- <p class="card-description">
            					Like so many organizations these days, Autodesk is a company in transition. It was until recently a traditional boxed software company selling licenses.<a href="#pablo"> Read More </a>
            				</p> -->
            			</div>
            		</div>
              </a>
          	</div>
          <% end %>
        </div>
      </div>
    </div>

  </div>

</div>

<div class="main main-raised extra-large-top-margin extra-large-bottom-margin">

  <div class="container">
  	<h2 class="title">Send us a message</h2>
		<div class="row">
			<div class="col-md-6">
				<p class="description">You can contact us with anything related to our services. We'll get in touch with you as soon as possible.<br><br>
				</p>

        <%= form_for @message, id: "contact-form" do |f| %>

					<div class="form-group label-floating is-empty">
            <%= f.label :name, "Your name" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
					<div class="form-group label-floating is-empty">
            <%= f.label :email, "Email address" %>
            <%= f.email_field :email, class: "form-control" %>
          </div>
					<div class="form-group label-floating is-empty">
            <%= f.label :phone, "Phone" %>
            <%= f.phone_field :phone, class: "form-control" %>
          </div>
					<div class="form-group label-floating is-empty">
            <%= f.label :message, "Your message" %>
            <%= f.text_area :message, class: "form-control" %>
          </div>

          <%= f.submit "Contact Us", class: "btn btn-round btn-primary btn-raised" %>

        <% end %>
			</div>

    	<div class="col-md-4 col-md-offset-2">
      	<div class="info info-horizontal">
					<div class="icon icon-primary">
						<i class="material-icons">pin_drop</i>
					</div>
					<div class="description">
						<h4 class="info-title">Find us at the office</h4>
						<p><%= @company.address_1 %><br>
              <%= @company.city %>, <%= @company.state %> <%= @company.zip %><br>
						</p>
					</div>
      	</div>
        <div class="info info-horizontal">
					<div class="icon icon-primary">
						<i class="material-icons">phone</i>
					</div>
					<div class="description">
						<h4 class="info-title">Give us a ring</h4>
						<p>
              <%= @company.phone %><br>
              Wed - Sun, 10:00am-7:00pm
						</p>
					</div>
      	</div>
      	<div class="info info-horizontal">
  				<div class="icon icon-primary">
  					<i class="material-icons">email</i>
  				</div>
          <div class="decription">
            <h4 class="info=title">Shoot us an email</h4>
            <p>
              <%= mail_to 'carole@justtherightpiece.furniture' %>
            </p>
          </div>
      	</div>
      </div>
    </div>
  </div>

</div>
