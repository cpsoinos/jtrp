<h1 class="text-center">Add a Category</h1>
</br>

<div class="col-md-6 col-md-offset-3">
  <div class="well bs-component">

    <%= form_for @category, class: "form-horizontal" do |f| %>

      <legend>Add a Category</legend>

      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <div class="error_messages notice alert alert-danger text-center">
            <% @category.errors.full_messages.each do |msg| %>
              <p><%= msg %></p>
            <% end %>
          </div>
        </div>
      </div>

      <div class="row form-row">
        <div class="text-center">
          <div class="col-xs-12 col-md-3 text-right">
            <%= f.label :name, class: "control-label" %>
          </div>
          <div class="col-xs-12 col-md-9 text-left">
            <%= f.text_field :name, class: "form-control", placeholder: "Category name" %>
          </div>
        </div>
      </div>

      <div class="row form-row">
        <div class="text-center">
          <div class="col-xs-12 col-md-3 text-right">
            <%= f.label :photo, class: "control-label" %>
          </div>
          <div class="col-xs-12 col-md-9 text-left">
            <%= f.file_field :photo, class: "form-control" %>
            <i>optional</i>
          </div>
        </div>
      </div>

      <div class="row form-row">
        <div class="actions">
          <div class="col-xs-12 text-center">
            <%= f.submit class: "btn btn-raised btn-primary"%>
          </div>
        </div>
      </div>

    <% end %>

  </div>
</div>
