<%
  meta title: "#{@category.name} - #{@company.name}",
       description: "Browse #{@category.name} items at #{@company.name} - JTRP",
       keywords: @categories.pluck(:name)
%>

<% breadcrumb :category, @category %>

<div class="row">

  <%= render 'sapphire_left_nav' %>

  <div class="col-md-9">

    <div class="row">
      <div class="col-md-11">
  	    <div class="cat_header">
  		    <h2><%= @category.name %></h2>
  	    </div>
    	</div>
      <% if current_user.try(:internal?) %>
        <div class="col-md-1">
          <i><%= link_to "edit", edit_category_path(@category) %></i>
        </div>
      <% end %>
    </div>

    <% @items.each_slice(3) do |slice| %>
      <div class="row">
        <% slice.each do |item| %>
          <div class="col-md-4">
            <%= render 'items/item_card', item: item %>
          </div>
        <% end %>
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-12">
        <div class="text-center">
          <%= paginate @items, html: {class: "pagination pull-right"} %>
        </div>
      </div>
    </div>

  </div>

</div>
