<h1 class="text-center"><%= @category.name %></h1>
</br>

<% if current_user && current_user.internal? %>
  <%= link_to "Add an item", new_category_item_path(@category) %>
<% end %>


<div class="col-md-10 col-md-offset-1">
  <% @category.items.each do |item| %>
    <div class="col-md-3">
      <div class="well bs-component text-center">
        <%= image_tag item.initial_photos.first.thumb.url, class: "img-rounded" %>
      </div>
    </div>
  <% end %>
      <%#= @item.barcode.html_safe %>


</div>
