<div class="btn-group dropup">

  <button type="button" class="btn btn-raised btn-primary btn-fab dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <i class='material-icons'>menu</i>
  </button>

  <ul class="dropdown-menu dropdown-menu-right fab-menu">

    <li>
      <%= link_to "Sync All Items to Clover", sync_account_items_path(account), method: :put, remote: true %>
    </li>
    <li role="separator" class="divider"></li>

    <li>
      <%= link_to "<i class='material-icons'>edit</i> Edit".html_safe, edit_account_path(account) %>
    </li>
    <li>
      <%= link_to "<i class='material-icons'>delete_forever</i> Delete".html_safe,
            account_path(account),
            method: :delete,
            data: {
              confirm:                   "Are you sure?",
              :'confirm-button-text'  => "Yes, I'm sure",
              :'cancel-button-text'   => "No, cancel!",
              :'sweet-alert-type'     => "warning",
              :'confirm-button-color' => "#f44336",
              text:                      "This will delete the account and all associated jobs, proposals, agreements, items, and statements. This is irreversable."
            }
      %>
    </li>
    <li role="separator" class="divider"></li>

    <li><%= link_to "<i class='material-icons'>add_location</i> New Job".html_safe, new_account_job_path(account) %></li>
    <li><%= link_to "<i class='material-icons'>add_location</i> New Proposal".html_safe, new_account_proposal_path(account) %></li>

  </ul>

</div>
