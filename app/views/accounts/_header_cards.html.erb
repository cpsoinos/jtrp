<div class="row">
	<div class="col-xs-12 col-sm-4">
		<a href="<%= account_path(account) %>">
			<div class="info">
				<div class="icon icon-info">
					<i class="material-icons">assignment_ind</i>
				</div>
				<h2 class="info-title"><%= account.id %></h2>
				<p>Account Number</p>
			</div>
		</a>
	</div>

	<% if account.primary_contact %>
		<div class="col-xs-12 col-sm-4">
			<a href="<%= account_client_path(account, account.primary_contact) %>">
				<div class="info">
					<div class="icon icon-warning">
						<i class="material-icons">person</i>
					</div>
					<h2 class="info-title"><%= account.primary_contact.full_name %></h2>
					<p>Primary Contact</p>
				</div>
			</a>
		</div>
	<% else %>
		<div class="col-xs-12 col-sm-4">
			<div class="info">
				<div class="icon icon-warning">
					<i class="material-icons">person</i>
				</div>
				<h2 class="info-title"><%= account.full_name %></h2>
				<p>Account Name</p>
			</div>
		</div>
	<% end %>

	<div class="col-xs-12 col-sm-4">
		<div class="info">
			<div class="icon icon-success">
				<i class="material-icons">av_timer</i>
			</div>
			<h2 class="info-title"><%= account.status.titleize %></h2>
			<p>Status</p>
		</div>
	</div>
</div>
