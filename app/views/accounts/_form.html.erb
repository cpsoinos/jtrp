<%= form_for @account, class: "form-horizontal" do |f| %>
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title">Account</h4>
    </div>

    <div class="modal-body">

      <%= f.hidden_field :is_company, value: true %>

      <div class="row">
        <div class="col-xs-12">
          <div class="form-group label-floating">
            <%= f.label :company_name, class: "control-label required" %>
            <%= f.text_field :company_name, class: "form-control", required: true %>
          </div>
        </div>

        <div class="col-xs-12">
          <div class="form-group label-floating">
            <%= f.label :primary_contact, class: "control-label" %>
            <%= f.collection_select :primary_contact_id, User.order(:last_name), :id, :full_name, { include_blank: true }, { class: "select form-control" } %>
            <p style="color: #AAAAAA;"><i><small>Leave this blank to create a new client on the next page</small></i></p>
          </div>
        </div>

        <div class="col-xs-12">
          <div class="form-group label-floating">
            <%= f.label :notes, class: "control-label" %>
            <%= f.text_field :notes, class: "form-control" %>
          </div>
        </div>
      </div>

    </div>

    <div class="modal-footer">
      <%= f.submit class: "btn btn-raised btn-primary" %>
    </div>

  </div>

<% end %>
