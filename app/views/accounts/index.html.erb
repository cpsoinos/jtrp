<% meta @meta_tags %>
<% meta title: "Accounts - #{@company.name}" %>

<div class="row">
  <div class="col-sm-12 text-center">
    <h1 class="company-title">Accounts</h1>
    <% if @filter.present? %>
      <% case @filter %>
      <% when "potential" %>
        <h4>Potential accounts have not yet signed an agreement.</h4>
      <% when "active" %>
        <h4>Active accounts have an active job.</h4>
      <% when "inactive" %>
        <h4>Inactive accounts have completed agreements or service orders.</h4>
      <% end %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2 col-xs-12">
    <div class="row">
      <ul class="nav nav-pills text-center justify-list" role="tablist">
  			<li class="">
  				<a href="#potential" aria-controls="potential" role="tab" data-toggle="tab" aria-expanded="false">
  					<div class="info">
  						<div class="icon icon-info tab-icon">
  							<i class="material-icons">assignment_ind</i>
  						</div>
  						<h1 class="info-title"><%= @accounts.potential.count %></h1>
  						<p>Potential</p>
  					</div>
  				</a>
  			</li>
  			<li class="">
  				<a href="#active" aria-controls="active" role="tab" data-toggle="tab" aria-expanded="false">
  					<div class="info">
  						<div class="icon icon-primary tab-icon">
  							<i class="material-icons">assignment_ind</i>
  						</div>
  						<h1 class="info-title"><%= @accounts.active.count %></h1>
  						<p>Active</p>
  					</div>
  				</a>
  			</li>
  			<li class="">
  				<a href="#inactive" aria-controls="inactive" role="tab" data-toggle="tab" aria-expanded="false">
  					<div class="info">
  						<div class="icon icon-warning tab-icon">
  							<i class="material-icons">assignment_ind</i>
  						</div>
  						<h1 class="info-title"><%= @accounts.inactive.count %></h1>
  						<p>Inactive</p>
  					</div>
  				</a>
  			</li>
      </ul>
    </div>

    <!-- Tab panes -->
    <div class="large-top-margin">
      <div class="tab-content">
        <div role="tabpanel" class="tab-pane fade" id="potential">
          <%= render "accounts_list", accounts: @accounts.potential %>
        </div>
        <div role="tabpanel" class="tab-pane fade" id="active">
          <%= render "accounts_list", accounts: @accounts.active %>
        </div>
        <div role="tabpanel" class="tab-pane fade" id="inactive">
          <%= render "accounts_list", accounts: @accounts.inactive %>
        </div>
      </div>
    </div>
  </div>
</div>
