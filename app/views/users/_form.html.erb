    <div class="col-xs-12 col-md-3 form-label">
      <%= f.label :city, class: "control-label required" %>
    </div>
    <div class="col-xs-12 col-md-9 text-left">
      <%= f.text_field :city, class: "form-control", placeholder: "City", required: true %>
    </div>
  </div>
</div>

<div class="row form-row">
  <div class="text-center">
    <div class="col-xs-12 col-md-3 form-label">
      <%= f.label :state, class: "control-label required" %>
    </div>
    <div class="col-xs-12 col-md-9 text-left">
      <%= f.text_field :state, class: "form-control", placeholder: "State", required: true %>
    </div>
  </div>
</div>

<div class="row form-row">
  <div class="text-center">
    <div class="col-xs-12 col-md-3 form-label">
      <%= f.label :zip, class: "control-label" %>
    </div>
    <div class="col-xs-12 col-md-9 text-left">
      <%= f.number_field :zip, class: "form-control", placeholder: "Zip" %>
    </div>
  </div>
</div>

<div class="row form-row">
  <div class="text-center">
    <div class="col-xs-12 col-md-3 form-label">
      <%= f.label :phone, class: "control-label" %>
    </div>
    <div class="col-xs-12 col-md-9 text-left">
      <%= f.phone_field :phone, class: "form-control", placeholder: "(123) 456-7890" %>
      <%= f.phone_field :phone_ext, class: "form-control", placeholder: "ext. 123" %>
    </div>
  </div>
</div>

<% if controller_name == "registrations" %>
  <div class="row form-row">
    <div class="text-center">
      <div class="col-xs-12 col-md-3 form-label">
        <%= f.label :role, "I would like to sign up as a client", class: "control-label" %>
      </div>
      <div class="col-xs-12 col-md-9 text-left">
        <%= f.check_box :role, {class: "form-control", checked: false}, "Client", "Guest" %>
      </div>
    </div>
  </div>

  <%= render 'users/consignment_policies_modal', f: f %>
<% end %>
