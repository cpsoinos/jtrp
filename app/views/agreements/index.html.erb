<div class="col-xs-12 col-lg-8 col-lg-offset-2">

  <%= render 'agreement_note_modal' %>

  <!-- Tabs -->
  <ul class="nav nav-pills nav-justified hidden-print large-top-margin large-bottom-margin" role="tablist">
    <% @agreements.each do |agreement| %>
    <li role="presentation"><a href="#<%= agreement.agreement_type %>" aria-controls="<%= agreement.agreement_type %>" role="tab" data-toggle="tab" class="agreement-tab"><%= agreement.agreement_type %></a></li>
    <% end %>
  </ul>

  <%= link_to "<i class='fa fa-caret-left'></i> Back to Proposal".html_safe, account_job_proposal_path(@account, @job, @proposal), class: "btn btn-raised btn-primary hidden-print" %>
  <button type="button" class="btn btn-raised btn-primary pull-right" data-toggle="modal" data-target="#agreement-note-modal">
    Send Agreements <i class='material-icons'>email</i>
  </button>

  <!-- Tab panes -->
  <div class="well bs-component">
    <div class="tab-content">
      <% @agreements.each do |agreement| %>
        <div role="tabpanel" class="tab-pane fade" id="<%= agreement.agreement_type %>">
          <% if agreement.active? && agreement.items.any? { |i| i.potential? } %>
            <div class="row hidden-print">
              <%= link_to "Mark Items Active <i class='material-icons'>store</i>".html_safe, agreement_activate_items_path(agreement), class: "btn btn-raised btn-primary pull-right", method: :post %>
            </div>
          <% end %>
          <% if agreement.scanned_agreement.present? %>
            <iframe src="<%= agreement.scanned_agreement.scan_url %>" width="100%" style="border: none;" class="full-height"> </iframe>
          <% else %>
            <%= render "#{agreement.agreement_type}", items: @items.where(client_intention: agreement.agreement_type), agreement: agreement %>
          <% end %>
          <%= render 'scanned_upload_form', agreement: agreement %>
        </div>
      <% end %>
    </div>
  </div>

</div>
