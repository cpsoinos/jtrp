<div class="row large-top-margin">
  <% if agreement.client_agreed.nil? ||  %>
    <%= render 'agreements/agree_to_terms', agreement: agreement %>
  <% else %>
    <i><%= account.full_name %> accepted the terms of this agreement<%= agreement.client_agreed_at.present? ? " at #{agreement.client_agreed_at.localtime.strftime('%l:%M %p on %B %d, %Y')}" : '' %>.</i>
  <% end %>
</div>
