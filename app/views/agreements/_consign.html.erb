<%= render 'proposals/header', form_name: "Consignment Agreement", agreement: agreement %>

<% if params[:print] %>
  <%= render 'agreements/consignment_terms', agreement: agreement %>
<% end %>

<h4>Addendums:</h4>

<div class="large-top-margin">
  <%= render 'items/items_list', headers: consignment_headers, context: "consignment_agreement", items: items %>
</div>

<div class="row large-top-margin">
  <% if agreement.client_agreed.nil? %>
    <%= render 'agreements/agree_to_terms', agreement: agreement %>
  <% else %>
    <i><%= @account.full_name %> accepted the terms of this agreement at <%= agreement.client_agreed_at.localtime.strftime("%l:%M %p on %B %d, %Y") %>.</i>
  <% end %>
</div>
