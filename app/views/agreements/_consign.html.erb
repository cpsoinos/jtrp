  </div>

  <div class="col-xs-12 col-md-6">
    <p>Consignor:</p>
    <%= render "signature_pad", user: @client, agreement: agreement, role: "client" %>
    <p class="agreement-name-printed"><%= @client.full_name %></p>
  </div>
</div>
