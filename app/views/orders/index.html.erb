<% meta title: "Order List - #{@company.name}" %>
<% breadcrumb :orders %>

<div class="row">
  <div class="col-sm-12 text-center">
    <h1 class="company-title">Orders</h1>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1" id="orders">
    <table class="table table-striped table-bordered table-hover purchase-list">
      <thead class="thead-inverse">
        <tr class="text-center">
          <th>Date</th>
          <th>Amount</th>
          <!-- <th>Account No.</th>
          <th>Client</th>
          <th>Job No.</th>
          <th>Job</th>
          <th>Items Total</th>
          <th>Service Total</th>
          <th>Invoice Total</th>
          <th>Check No.</th> -->
        </tr>
      </thead>
      <tbody>
        <tr
          is="order-row"
          v-for="order in orders"
          :order="order">
        </tr>
      </tbody>
    </table>
  </div>
</div>

<script type="text/x-template" id="order-row">
  <tr>
    <td>{{ order.created_at }}</td>
    <td>{{ order.amount_cents }}</td>
  </tr>
</script>
