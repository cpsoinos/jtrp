var listItem = $("#to-do-list-agreement-<%= @agreement.id %>")
var modal = $(".modal.fade.in")

modal.modal('toggle');
<% if @letter.try(:valid?) %>
  listItem.remove();
  toastr.success('<%= @message %>', 'Success!', {timeOut: 5000})
<% elsif @agreement.unexpireable? || @agreement.items_retrieved? %>
  listItem.remove();
  toastr.warning('<%= @message %>', 'Note:', {timeOut: 5000})
<% elsif @agreement.tag_list.include?('expired') %>
  toastr.warning('<%= @message %>', 'Note:', {timeOut: 5000})
<% else %>
  toastr.error('<%= @message.join("\n") %>', 'Error!', {timeOut: 5000})
<% end %>
