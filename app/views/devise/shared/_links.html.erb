<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="row form-row">
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-raised btn-simple btn-wd" %>
  </div>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="row form-row">
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "btn btn-raised btn-simple btn-wd" %>
  </div>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="row form-row">
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "btn btn-raised btn-simple btn-wd" %>
  </div>
<% end -%>
