<div class="col-md-8 col-md-offset-2">
  <div class="well bs-component">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "validate-form" }) do |f| %>

      <legend>Sign Up</legend>

      <%= render 'users/form', resource: resource, f: f %>

      <div class="row form-row">
        <div class="actions">
          <div class="col-xs-12 text-center">
            <%= f.submit "Sign up", class: "btn btn-raised btn-primary", id: "sign-up-button" %> - or -
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>

    <% end %>
  </div>

</div>
