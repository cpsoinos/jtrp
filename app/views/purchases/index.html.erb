<% meta title: "Purchase List - #{@company.name}" %>

<div class="container-fluid">

  <div class="row top-margin">
    <div class="col-xs-12">
      <table class="table table-striped table-bordered table-hover tablesorter purchase-list">
        <thead class="thead-inverse">
          <tr class="text-center">
            <th class="text-center">Date</th>
            <th class="text-center">Account No.</th>
            <th class="text-center">Account</th>
            <th class="text-center">Job No.</th>
            <th class="text-center">Job</th>
            <th class="text-center">Items Total</th>
            <th class="text-center">Service Total</th>
            <th class="text-center">Invoice Total</th>
            <th class="text-center">Check No.</th>
          </tr>
        </thead>
        <tbody>
          <% @agreements.each do |agreement| %>
            <tr class="tr-link" data-link="<%= purchase_path(agreement) %>">
              <td><%= agreement.date.try(:strftime, '%-m/%-d/%y') %></td>
              <td><%= agreement.account.id %></td>
              <td><%= agreement.account.inverse_full_name %></td>
              <td><%= agreement.job.id %></td>
              <td><%= agreement.job.name %></td>
              <td><%= humanized_money_with_symbol(agreement.cost_of_items) %></td>
              <td><%= humanized_money_with_symbol(agreement.service_charge) %></td>
              <td><%= humanized_money_with_symbol(agreement.total_price) %></td>
              <td><%= agreement.check_number %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
