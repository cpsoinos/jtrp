<% meta title: "#{@account.short_name} - Purchase - #{@company.name}" %>

<div class="container-fluid">
  <div class="row top-margin">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <div class="text-center">
        <%= render 'header_cards' %>
      </div>

      <div class="row vertical-align large-top-margin">
        <div class="col-sm-12">
          <%= form_for @agreement, url: purchase_url(@agreement) do |f| %>

            <div class="row">
              <div class="col-xs-6">
                <div class="row">
                  <div class="form-group label-floating">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="fa fa-calendar" aria-hidden="true"></i>
                      </span>
                      <%= f.label :date, class: "control-label" %>
                      <%= f.text_field :date, value: @agreement.try(:date).try(:strftime, '%-m/%-d/%Y'), class: "form-control datepicker" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="form-group label-floating">
                <div class="input-group">
                  <span class="input-group-addon">
                    <i class="fa fa-usd" aria-hidden="true"></i>
                  </span>
                  <%= f.label :service_charge, nil, class: "control-label" %>
                  <%= f.text_field :service_charge, class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="form-group label-floating">
                <div class="input-group">
                  <%= f.label :check_number, class: "control-label" %>
                  <%= f.text_field :check_number, class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="row text-center bottom-margin">
              <%= f.submit class: "btn btn-primary btn-raised" %>
            </div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
