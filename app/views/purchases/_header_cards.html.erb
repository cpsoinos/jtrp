<div class="row">
	<div class="col-xs-12 col-sm-4">
		<a href="<%= agreement_path(@agreement) %>">
			<div class="info">
				<div class="icon icon-info">
					<i class="material-icons">assignment_ind</i>
				</div>
				<h2 class="info-title"><%= @agreement.id %></h2>
				<p>Purchase Invoice Number</p>
			</div>
		</a>
	</div>

	<% if @account.primary_contact %>
		<div class="col-xs-12 col-sm-4">
			<div class="info">
        <a href="<%= client_path(@account.primary_contact) %>">
					<div class="icon icon-warning">
						<i class="material-icons">person</i>
					</div>
					<h2 class="info-title"><%= @account.primary_contact.full_name %></h2>
        </a>
				<p><%= link_to("Account No. #{@account.id}", account_path(@account)) %></p>
			</div>
		</div>
	<% else %>
		<div class="col-xs-12 col-sm-4">
      <a href="<%= account_path(@account) %>">
  			<div class="info">
  				<div class="icon icon-warning">
  					<i class="material-icons">person</i>
  				</div>
  				<h2 class="info-title"><%= @account.full_name %></h2>
  				<p>Account Name</p>
  			</div>
      </a>
		</div>
	<% end %>

	<div class="col-xs-12 col-sm-4">
    <a href="<%= account_path(@account) %>">
  		<div class="info">
  			<div class="icon icon-success">
  				<i class="material-icons">map</i>
  			</div>
  			<h2 class="info-title"><%= @job.address_1 %></h2>
  			<p><%= "#{@job.city}, #{@job.state} #{@job.zip}" %></p>
  		</div>
    </a>
	</div>
</div>
