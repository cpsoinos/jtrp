<div class="row">
  <div class="col-md-8 col-md-offset-2 col-xs-10 col-xs-offset-1">
    <div class="row">

      <% if @results.empty? %>
        <h4>Sorry, no results found for "<%= params[:query] %>".</h4>
      <% end %>

      <ul class="nav nav-pills nav-pills-icons nav-pills-primary text-center" role="tablist">
        <% @results.each do |key, values| %>
          <li class="">
            <a href="#<%= key %>" aria-controls="<%= key %>" role="tab" data-toggle="tab" aria-expanded="false">
              <h5><%= key.titleize.pluralize(values.count) %></h5>
            </a>
          </li>
        <% end %>
      </ul>
    </div>

    <!-- Tab panes -->
    <div class="large-top-margin">
      <div class="tab-content">
        <% @results.each do |key, values| %>
          <div role="tabpanel" class="tab-pane fade" id="<%= key %>">
            <% case key %>
            <% when "item" %>
              <%= render "items/items_list", items: values %>
            <% when "account" %>
              <%= render "accounts/accounts_list", accounts: values %>
            <% when "client" %>
              <%= render "clients/clients_list", clients: values %>
            <% when "job" %>
              <%= render "jobs/jobs_list", jobs: values %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
