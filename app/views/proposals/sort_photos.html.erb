<div class="container-fluid">

  <div class="row large-top-margin">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <div class="col-xs-6">
        <%= link_to "<i class='fa fa-caret-left'></i> Step 1: Add Photos".html_safe, edit_account_job_proposal_path(@account, @job, @proposal), class: "btn btn-raised btn-primary" %>
      </div>
      <div class="col-xs-6 text-right">
        <%= link_to "Step 3: Sort Items <i class='fa fa-caret-right'></i>".html_safe, account_job_proposal_sort_items_path(@account, @job, @proposal), class: "btn btn-raised btn-primary" %>
      </div>
    </div>
  </div>

  <div class="row text-center">
    <h2>Step 2</h2>
    Have a lot of photos? Sort them here before you create items. Just drag and drop.
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <div class="panel panel-primary large-top-margin">

        <div class="panel-body">

          <div class="row">
            <ul class="nav flexi-nav top-margin" role="tablist" id="photos" data-update-url="<%= sort_photos_url %>">
              <% @photos.each do |photo| %>
                <%= content_tag_for :li, photo, class: "nbs-flexisel-item", style: "margin: 5px;" do %>
                  <%= image_tag(photo.photo_url(:thumb), class: "img-rounded img-responsive img-raised") %>
                <% end %>
              <% end %>
            </ul>
          </div>

      </div>
    </div>
  </div>

</div>

<% if current_user.try(:internal?) %>
  <% content_for :fab do %>
    <%= render 'proposals/fab_menu', account: @account, job: @job, proposal: @proposal %>
  <% end %>
<% end %>
