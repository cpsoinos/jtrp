<div class="row">
  <div class="col-xs-12 col-md-8 col-md-offset-2">
    <div class="panel panel-primary large-top-margin">

      <h1 class="text-center company-font">Proposal for <%= @proposal.account.full_name %></h1>

      <div class="panel-body">
        <div class="row text-center">
          <h2>Step 1: Upload Photos</h2>
        </div>

        <div class="row form-row text-center extra-large-top-margin">
          <%= form_tag(batch_create_photos_path, class: "form-horizontal") do %>

            <div class="fileinput fileinput-new text-center" data-provides="fileinput">

              <span class="btn-file" style="display: inline-block;">
                <div class="thumbnail img-raised">
                  <%= image_tag("image_placeholder.jpg") %>
                </div>
                <%= cl_image_upload_tag(:photos, multiple: true, return_delete_token: true) %>
                <%= hidden_field_tag :photo_type, "initial" %>
                <%= hidden_field_tag :proposal_id, @proposal.id %>
              </span>

              <div class="progressbar fileupload-progressbar">
                <div style="width:0%;"></div>
              </div>
              <span class="status"></span>
            </div>

            <div class="row text-center top-margin">
              <%= submit_tag "Save Photos", class: "btn btn-raised btn-primary" %>
            </div>

          <% end %>
        </div>

        <div class="text-right large-top-margin">
          <%= link_to "Step 2: Sort Items <i class='fa fa-caret-right'></i>".html_safe, account_job_proposal_sort_items_path(@account, @job, @proposal), class: "btn btn-raised btn-primary" %>
        </div>

        <div class="row">
          <div class="preview thumbnail img-raised"></div>
        </div>


        <%#= form_for [@proposal, @item], class: "form-horizontal", remote: true do |f| %>
          <%#= render 'items/form', item: @item, f: f, legend: "Add a New Item:", remote: true %>
        <%# end %>

        <!-- <%# if current_user.admin? %>
          <div class="row" id="existing-item">
            <div class="text-center"> - or -</div>
          </div>

          <%#= render 'items/batch_upload_form', legend: "Upload a set of items:" %>
        <%# end %>


      </div> -->


    </div>
  </div>
</div>
