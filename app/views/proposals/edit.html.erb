<h1 class="text-center">Proposal for <%= @proposal.client.full_name %></h1>
</br>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= render 'item_list' %>
  </div>
</div>

<div class="col-md-8 col-md-offset-2">
  <div class="well bs-component">
    <%= render 'items/form', category: @proposal, item: Item.new, legend: "Add an Item", redirect_url: edit_proposal_path(@proposal), remote: true %>
    <br>
    <div class="text-center">
      <%= link_to "View Items <i class='fa fa-caret-right'></i>".html_safe, proposal_path(@proposal), class: "btn btn-raised btn-primary" %>
    </div>
  </div>
</div>
