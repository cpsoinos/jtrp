<div class="col-xs-12 col-md-4 grid-item">
  <div class="panel panel-primary text-center" id="panel-item-<%= item.id %>">
    <%= render 'items/panel_header', account: @account, job: @job, proposal: @proposal, item: item %>

    <div class="panel-body">
      <div class="row">

        <div class="col-xs-12">
          <div class="row client-grid">
            <div class="col-xs-6 client-grid-sizer"></div>
            <% if item.initial_photos.present? %>
              <% item.initial_photos.each do |photo| %>
                <div class="col-xs-6 client-grid-item">
                  <%= link_to image_tag(photo.photo_url, class: "thumb"), account_job_proposal_item_path(@account, @job, @proposal, item) %>
                </div>
              <% end %>
            <% else %>
              <div class="col-xs-6 client-grid-item client-grid-item--width2">
                <%= link_to image_tag("thumb_No_Image_Available.png", class: "thumb"), account_job_proposal_item_path(@account, @job, @proposal, item) %>
              </div>
            <% end %>
          </div>
        </div>

      </div>

    </div>
  </div>
</div>
