<div class="row">

	<div class="col-xs-12 col-sm-3">
		<a href="<%= account_path(@item.account) %>">
  		<div class="info">
  			<div class="icon icon-warning">
  				<i class="material-icons">assignment_ind</i>
  			</div>
  			<h1 class="info-title"><%= @item.account.account_number %></h1>
  			<p>Account Number</p>
  		</div>
    </a>
	</div>

	<div class="col-xs-12 col-sm-3">
		<a href="<%= account_job_path(@item.account, @item.job) %>">
			<div class="info">
				<div class="icon icon-info">
					<i class="material-icons">location_on</i>
				</div>
				<h1 class="info-title"><%= @item.job.id %></h1>
				<p>Job Number</p>
			</div>
		</a>
	</div>

	<div class="col-xs-12 col-sm-3">
    <a href="<%= account_job_proposal_path(@item.account, @item.job, @item.proposal) %>">
      <div class="info">
  			<div class="icon icon-primary">
  				<i class="material-icons">assignment</i>
  			</div>
  			<h1 class="info-title"><%= @item.proposal.id %></h1>
  			<p>Proposal Number</p>
  		</div>
    </a>
	</div>

	<% if @item.agreement %>
		<div class="col-xs-12 col-sm-3">
			<a href="<%= account_job_proposal_agreement_path(@item.account, @item.job, @item.proposal, @item.agreement) %>">
	  		<div class="info">
	  			<div class="icon icon-success">
	  				<i class="material-icons">assignment_turned_in</i>
	  			</div>
	  			<h1 class="info-title"><%= @item.agreement.id %></h1>
	  			<p>Agreement Number</p>
	  		</div>
	    </a>
		</div>
	<% end %>

</div>
