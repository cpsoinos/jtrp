<div class="main main-raised main-product top-margin">
  <div class="row">
    <div class="button-container">
      <span class="hidden-print text-right">
        <%= link_to "<i class='material-icons'>delete_forever</i>".html_safe, item_path(@item), method: :delete, class: "btn btn-fab btn-fab-mini btn-danger pull-right", data: {confirm: "Are you sure?", :'confirm-button-text' => "Yes, I'm sure", :'cancel-button-text' => "No, cancel!", :'sweet-alert-type' => 'warning', :'confirm-button-color' => '#f44336', text: "This will delete the item. This is irreversable."} %>
      </span>
    </div>

    <div class="col-xs-10 col-xs-offset-1 col-md-5 col-md-offset-1">
      <div class="tab-content">
        <% @item.initial_photos.each do |photo| %>
          <div class="tab-pane large-top-margin" id="product-page<%= photo.id %>">
            <div class="hidden-print text-right top-margin">
              <%= link_to "<i class='material-icons'>collections</i>".html_safe, photo_path(photo, photo: {primary: "primary"}), method: :put, class: "btn btn-fab btn-fab-mini btn-primary pull-right", data: { toggle: "tooltip", placement: "right", title: "Make this the primary photo" } %>
            </div>
            <%= image_tag(photo.photo_url(quality: "auto", fetch_format: :auto), class: "img-rounded img-responsive img-raised img-featured", id: "photo-#{photo.id}") %>
            <div class="hidden-print text-right top-margin">
              <%= link_to "<i class='material-icons'>delete_forever</i>".html_safe, photo_path(photo), remote: true, method: :delete, class: "btn btn-fab btn-fab-mini btn-danger pull-right", data: { confirm: "Are you sure?", :'confirm-button-text' => "Yes, I'm sure", :'cancel-button-text' => "No, cancel!", :'sweet-alert-type' => 'warning', :'confirm-button-color' => '#f44336', text: "This will delete the photo. This is irreversable.", toggle: "tooltip", placement: "right", title: "Delete this photo" } %>
            </div>
          </div>
        <% end %>
      </div>

      <ul class="nav flexi-nav top-margin" role="tablist" id="flexiselDemo1">
        <% @item.initial_photos.each do |photo| %>
          <li class="nbs-flexisel-item">
            <a href="#product-page<%= photo.id %>" role="tab" data-toggle="tab" aria-expanded="false" class="img-tab">
              <%= image_tag(photo.photo_url(:thumb), class: "img-rounded img-responsive img-raised", id: "photo-#{photo.id}-thumb") %>
            </a>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="col-xs-12 col-md-6">

      <div class="extra-large-top-margin">
        <%= form_for @item, class: "form-horizontal", html: { multipart: true } do |f| %>
          <%= render 'form', item: @item, f: f, legend: "Edit item", redirect_url: params[:redirect_url] %>
        <% end %>
      </div>

    </div>
  </div>

</div>
