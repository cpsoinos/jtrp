<div class="row">
  <div class="col-sm-12 text-center">
    <h1 class="company-title"><%= @filter.present? ? @filter : "All" %> Items</h1>
    <% if @filter.present? %>
      <% case @filter %>
      <% when "Potential" %>
        <h4><%= @filter %> items have not yet been listed for sale.</h4>
      <% when "Active" %>
        <h4><%= @filter %> items have a signed proposal and are  actively for sale.</h4>
      <% when "Sold" %>
        <h4><%= @filter %> items have been sold.</h4>
      <% end %>
    <% end %>
  </div>
</div>

<div class="col-xs-12 col-md-8 col-md-offset-2">

  <!-- Tabs -->
  <ul class="nav nav-pills nav-justified" role="tablist">
    <% @intentions_map.each do |key, value| %>
    <li role="presentation"><a href="#<%= key %>" aria-controls="<%= key %>" role="tab" data-toggle="tab" class="agreement-tab"><%= value %></a></li>
    <% end %>
  </ul>

  <!-- Tab panes -->
  <div class="well bs-component large-top-margin">
    <div class="tab-content">
      <% @intentions.each do |intention| %>
        <div role="tabpanel" class="tab-pane fade" id="<%= intention %>"><%= render "items_list", items: @items.where(client_intention: intention) %></div>
      <% end %>
    </div>
  </div>

</div>
