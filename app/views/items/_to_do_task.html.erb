<div class="modal fade" tabindex="-1" role="dialog" id="item-todo-task-modal">
  <div class="modal-dialog">
    <%= form_tag '', method: :put, remote: true do %>
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Item Description</h4>
        </div>
        <div class="modal-body">

          <div class="row list-group-item vertical-align">
            <div class="col-xs-4 item-photo"></div>
            <div class="col-xs-6">
              <h4 class="list-group-item-heading item-link"></h4>
              <p class="list-group-item-text">This item <span class="task-description"></span>.</p>
            </div>
            <div class="col-xs-2 text-center">
              SKU: <span class="item-id"></span>
            </div>
          </div>

          <div class="list-group-separator"></div>

          <div class="row list-group-item vertical-align">
            <div class="col-xs-4 text-center">
              <i class="material-icons md-48">assignment_ind</i>
            </div>
            <div class="col-xs-6">
              <h4 class="list-group-item-heading account-link"></h4>
              <p class="list-group-item-text account-link">This item comes from the <span class="account-link"></span> account.</p>
            </div>
            <div class="col-xs-2 text-center">
              Item: <span class="account-item-number"></span>
            </div>
          </div>

          <div class="list-group-separator"></div>

          <div class="row list-group-item vertical-align">
            <div class="col-xs-4 text-center">
              <i class="material-icons md-48">map</i>
            </div>
            <div class="col-xs-6">
              <h4 class="list-group-item-heading job-link"></h4>
              <p class="list-group-item-text">This item comes from the job at <span class="job-link"></span>.</p>
            </div>
            <div class="col-xs-2 text-center">
              Job: <span class="job-id"></span>
            </div>
          </div>

          <div class="list-group-separator"></div>

          <div class="row list-group-item vertical-align">
            <div class="col-xs-4 text-center">
              <i class='material-icons md-48'>assignment</i>
            </div>
            <div class="col-xs-6">
              <h4 class="list-group-item-heading account-link"></h4>
              <p class="list-group-item-text">This item was part of <span class="proposal-link"></span>.</p>
            </div>
            <div class="col-xs-2 text-center item-ownership-type"></div>
          </div>

          <div class="form-group">
            <div class="task-label"></div>
            <div class="input-group">
              <span class="input-group-addon">$</span>
              <div class="task-field"></div>
            </div>
          </div>

        </div>
        <div class="modal-footer">
          <%= submit_tag "Update Item", class: "btn btn-raised btn-primary" %>
        </div>
      </div><!-- /.modal-content -->
    <% end %>
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
