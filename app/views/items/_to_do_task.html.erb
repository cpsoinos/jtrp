<div class="modal fade" tabindex="-1" role="dialog" id="<%= item.id %>-task-modal">
  <div class="modal-dialog">
    <%= form_for item, remote: true do |f| %>
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title"><%= item.description %></h4>
        </div>
        <div class="modal-body">

          <div class="row list-group-item vertical-align">
            <div class="col-xs-4">
              <%= image_tag(item.featured_photo.photo_url(client_hints: true, quality: "auto", fetch_format: :auto, dpr: "auto", effect: :improve, width: "120", height: "160", crop: "fill"), class: "img-rounded img-responsive img-raised") %>
            </div>
            <div class="col-xs-6">
              <h4 class="list-group-item-heading"><%= link_to item.description, account_job_proposal_item_path(item.account, item.job, item.proposal, item) %></h4>
              <p class="list-group-item-text">This item <%= item.task[:description] %>.</p>
            </div>
            <div class="col-xs-2 text-center">
              SKU: <%= item.id %>
            </div>
          </div>

          <div class="list-group-separator"></div>

          <div class="row list-group-item vertical-align">
            <div class="col-xs-4 text-center">
              <i class="material-icons md-48">assignment_ind</i>
            </div>
            <div class="col-xs-6">
              <h4 class="list-group-item-heading"><%= link_to item.account.full_name, account_path(item.account) %></h4>
              <p class="list-group-item-text">This item comes from the <%= link_to item.account.full_name, account_path(item.account) %> account.</p>
            </div>
            <div class="col-xs-2 text-center">
              Item: <%= item.account_item_number %>
            </div>
          </div>

          <div class="list-group-separator"></div>

          <div class="row list-group-item vertical-align">
            <div class="col-xs-4 text-center">
              <i class="material-icons md-48">location_on</i>
            </div>
            <div class="col-xs-6">
              <h4 class="list-group-item-heading"><%= link_to item.job.name, account_job_path(item.account, item.job) %></h4>
              <p class="list-group-item-text">This item comes from the job at <%= link_to item.job.name, account_job_path(item.account, item.job) %>.</p>
            </div>
            <div class="col-xs-2 text-center">
              Job: <%= item.job.id %>
            </div>
          </div>

          <div class="list-group-separator"></div>

          <div class="row list-group-item vertical-align">
            <div class="col-xs-4 text-center">
              <i class='material-icons md-48'>assignment</i>
            </div>
            <div class="col-xs-6">
              <h4 class="list-group-item-heading"><%= link_to item.account.full_name, account_path(item.account) %></h4>
              <p class="list-group-item-text">This item was part of <%= link_to "proposal ##{item.proposal.id}", account_job_proposal_path(item.account, item.job, item.proposal) %>.</p>
            </div>
            <div class="col-xs-2 text-center">
              <%= item.ownership_type %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label task_field, class: "control-label" %>
            <div class="input-group">
              <span class="input-group-addon">$</span>
              <%= f.number_field task_field, class: "form-control text-field", step: 0.01 %>
            </div>
          </div>

        </div>
        <div class="modal-footer">
          <%= f.submit class: "btn btn-raised btn-primary" %>
        </div>
      </div><!-- /.modal-content -->
    <% end %>
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
