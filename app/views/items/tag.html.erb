<div class="col-md-4 col-md-offset-4">
  <div class="well bs-component">
    <div class="row">
      <h3 class="text-center company-title">Just the Right Piece</h3>
    </div>
    <div class="row">
      <% if @item.listing_photos.present? %>
        <div class="col-md-6">
          <%= image_tag @item.listing_photos.first.thumb.url, class: "img-rounded" %></br></br>
        </div>
      <% end %>
      <div class="col-md-6 vcenter">
        <span><b>Item No.</b> <%= @item.id %></span>
        <p class="tag tag-description"><%= @item.try(:description) %></p>
        <p class="tag tag-price"><%= humanized_money_with_symbol(@item.listing_price) %></p>
      </div>
    </div>
    <div class="row text-center">
      <%= @item.barcode.html_safe %><br />
      <%= @item.token %>
    </div>
  </div>
</div>
