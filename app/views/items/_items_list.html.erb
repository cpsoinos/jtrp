<div class="row">
  <div class="row grid">
    <div class="grid-sizer col-xs-12 col-sm-6 col-md-4"></div>

    <% if items.empty? %>
      <div class="col-xs-12 col-sm-6 col-md-4 grid-item">No items.</div>
    <% end %>

    <% items.each do |item| %>
      <div class="col-xs-12 col-sm-6 col-sm-4 grid-item">
        <div class="panel panel-primary text-center">
          <div class="panel-heading <%= item.panel_color %>">
            <h4 class="list-group-item-heading"><%= link_to item.description, item_path(item) %></h4>
          </div>

          <div class="panel-body">

            <% if item.listing_photos.present? %>
              <%= link_to image_tag(item.listing_photos.first.photo_url(:thumb), class: "thumb", alt: "item.description"), item_path(item) %>
            <% elsif item.initial_photos.present? %>
              <%= link_to image_tag(item.initial_photos.first.photo_url(:thumb), class: "thumb", alt: "item.description"), item_path(item) %>
            <% else %>
              <%= link_to image_tag("thumb_No_Image_Available.png", class: "circle", alt: "item.description"), item_path(item) %>
            <% end %>
            
            <table class="table-condensed top-margin">
              <tr>
                <th>Account</th>
                <td>
                  <%= link_to(item.proposal.account.full_name, account_path(item.proposal.account)) %>
                </td>
              </tr>
              <tr>
                <th>Proposal No.</th>
                <td>
                  <%= link_to(item.proposal.id, proposal_path(item.proposal)) %>
                </td>
              </tr>
              <tr>
                <th>Agreement No.</th>
                <td>
                  <% if item.agreement %>
                    <%= link_to("#{item.agreement.id}", account_job_proposal_agreement_path(item.proposal.account, item.proposal.job, item.proposal, item.agreement)) %>
                  <% else %>
                    <i>none</i>
                  <% end %>
                </td>
              </tr>
              <% if item.owned? %>
                <tr>
                  <th>Purchase Price</th>
                  <td>
                    <% if item.purchase_price_cents %>
                      <%= humanized_money_with_symbol(item.purchase_price) %>
                    <% else %>
                      <i>none</i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
              <tr>
                <th>Listing Price</th>
                <td>
                  <% if item.listing_price_cents %>
                    <%= humanized_money_with_symbol(item.listing_price) %>
                  <% else %>
                    <i>none</i>
                  <% end %>
                </td>
              </tr>
              <tr>
                <th>Min. Sale Price</th>
                <td>
                  <% if item.minimum_sale_price_cents %>
                    <%= humanized_money_with_symbol(item.minimum_sale_price) %>
                  <% else %>
                    <i>none</i>
                  <% end %>
                </td>
              </tr>
              <% if item.sold? %>
                <tr>
                  <th>Sale Price</th>
                  <td>
                    <%= humanized_money_with_symbol(item.sale_price) %>
                  </td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>
