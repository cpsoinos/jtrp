<div class="col-xs-12 col-md-4 client-grid-item">
  <div class="panel panel-primary text-center">
    <div class="panel-body">
      <% if item.listing_photos.present? %>
        <h4><%= link_to image_tag(item.listing_photos.first.photo_url(:thumb), class: "thumb"), path %></h4>
      <% elsif item.initial_photos.present? %>
        <h4><%= link_to image_tag(item.initial_photos.first.photo_url(:thumb), class: "thumb"), path %></h4>
      <% end %>
    </div>
    <div class="panel-heading <%= item.panel_color %>">

      <div class="row vertical-align">
        <div class="col-xs-3 text-left">
          <span>Item No.</span> <span class="pull-right"><%= item.account_item_number %></span><br />
          <span>SKU No.</span> <span class="pull-right"><%= item.id %></span><br />
          <span><%= item.ownership_type %></span>
        </div>
        <div class="col-xs-6">
          <h3><%= link_to "#{item.description}", path %></h3>
        </div>
        <div class="col-xs-3">
          <%= link_to "<i class='material-icons'>delete_forever</i>".html_safe, "javascript:void(0)", class: "btn btn-fab btn-fab-mini btn-danger remove-existing-item-button pull-right", data: { item_id: item.id } %>
        </div>
      </div>

    </div>
  </div>
</div>
