<div class="col-xs-6 col-md-4 client-grid-item">
  <div class="panel panel-primary text-center">
    <div class="panel-body">
      <% if item.listing_photos.present? %>
        <h4><%= link_to image_tag(item.listing_photos.first.photo_url(:thumb), class: "thumb"), path %></h4>
      <% elsif item.initial_photos.present? %>
        <h4><%= link_to image_tag(item.initial_photos.first.photo_url(:thumb), class: "thumb"), path %></h4>
      <% end %>
    </div>
    <div class="panel-heading <%= item.panel_color %>">
      <div class="row vertical-align">
        <div class="col-xs-4">
          <h5><%= link_to item.client_intention.titleize, path %></h5>
        </div>
        <div class="col-xs-4">
          <h5><%= link_to item.description, path %></h5>
        </div>
      </div>
    </div>
  </div>
</div>
