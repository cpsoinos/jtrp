<div class="row">
  <div class="col-sm-12 text-center">
    <span class="pull-right"><%= link_to "Delete", item_path(@item), method: :delete, class: "btn btn-raised btn-danger" %></span>
    <span class="pull-right"><%= link_to "Edit", edit_item_path(@item), class: "btn btn-raised btn-primary", data: {confirm: "Are you sure?", :'confirm-button-text' => "Yes, I'm sure", :'cancel-button-text' => "No, cancel!", :'sweet-alert-type' => 'warning', :'confirm-button-color' => '#f44336', text: "This will delete the item. This is irreversable."} %></span>
    <h1 class="company-title"><%= @item.description %></h1>
  </div>
</div>

<div class="row grid">
  <div class="grid-sizer col-xs-6 col-md-3"></div>

  <div class="grid-item col-xs-6 col-md-3">
    <div class="panel panel-primary text-center">
      <div class="panel-body">
        <h1><%= link_to @item.account.account_number, account_path(@item.account) %></h1>
      </div>
      <div class="panel-heading complement-primary">
        <h3><%= link_to "<i class='material-icons'>person</i> Account Number".html_safe, account_path(@item.account) %></h3>
      </div>
    </div>
  </div>

  <div class="grid-item col-xs-6 col-md-3">
    <div class="panel panel-primary text-center">
      <div class="panel-body">
        <h1><%= link_to @item.job.id, account_job_path(@item.account, @item.job) %></h1>
      </div>
      <div class="panel-heading complement-darker">
        <h3><%= link_to "<i class='material-icons md-24'>assignment_ind</i> Job Number".html_safe, account_job_path(@item.account, @item.job) %></h3>
      </div>
    </div>
  </div>

  <div class="grid-item col-xs-6 col-md-3">
    <div class="panel panel-primary text-center">
      <div class="panel-body">
        <h1><%= link_to @item.proposal.id, account_job_proposal_path(@item.account, @item.job, @item.proposal) %></h1>
      </div>
      <div class="panel-heading secondary-primary">
        <h3><%= link_to "Proposal Number", account_job_proposal_path(@item.account, @item.job, @item.proposal) %></h3>
      </div>
    </div>
  </div>

  <% if @item.agreement.present? %>
    <div class="grid-item col-xs-6 col-md-3">
      <div class="panel panel-primary text-center">
        <div class="panel-body">
            <h1><%= link_to @item.agreement.id, account_job_proposal_agreement_path(@item.account, @item.job, @item.proposal, @item.agreement) %></h1>
        </div>
        <div class="panel-heading secondary-darker">
          <h3><%= link_to "Agreement Number", account_job_proposal_agreement_path(@item.account, @item.job, @item.proposal, @item.agreement) %></h3>
        </div>
      </div>
    </div>
  <% end %>

</div>

<div class="col-md-8 col-md-offset-2">
  <div class="well bs-component">

    <div class="row vertical-align">
      <div class="col-xs-12 col-md-4 text-center">
        <% if @item.listing_photos.present? %>
          <%= image_tag(@item.listing_photos.first.photo_url(:thumb), class: "img-rounded") %>
        <% elsif @item.initial_photos.present? %>
          <%= image_tag(@item.initial_photos.first.photo_url(:thumb), class: "img-rounded") %>
        <% else %>
          <%= image_tag(Photo.default_url) %>
        <% end %>
      </div>
      <div class="col-xs-12 col-md-4 text-center">
        <h3><%= @item.description %></h3>

        <div class="row">
          <div class="col-xs-6 col-md-3 col-md-offset-3 form-label">
            Client:
          </div>
          <div class="col-xs-6 col-md-3">
            <% if @item.proposal %>
              <%= link_to @item.proposal.client.full_name, client_path(@item.proposal.client) %>
            <% else %>
              <i>none</i>
            <% end %>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-6 col-md-3 col-md-offset-3 form-label">
            Proposal No.:
          </div>
          <div class="col-xs-6 col-md-3">
            <% if @item.proposal %>
              <%= link_to @item.proposal.id, proposal_path(@item.proposal) %>
            <% else %>
              <i>none</i>
            <% end %>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-6 col-md-3 col-md-offset-3 form-label">
            Agreement No. & Type:
          </div>
          <div class="col-xs-6 col-md-3">
            <% if @item.agreement %>
              <%= link_to "#{@item.agreement.agreement_type.capitalize} ##{@item.agreement.id}", proposal_agreement_path(@item.proposal, @item.agreement) %>
            <% else %>
              <i>none</i>
            <% end %>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-6 col-md-3 col-md-offset-3 form-label">
            Purchase Price:
          </div>
          <div class="col-xs-6 col-md-3">
            <%= humanized_money_with_symbol(@item.purchase_price) %>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-6 col-md-3 col-md-offset-3 form-label">
            Listing Price:
          </div>
          <div class="col-xs-6 col-md-3">
            <%= humanized_money_with_symbol(@item.listing_price) %>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-6 col-md-3 col-md-offset-3 form-label">
            Minimum Sale Price:
          </div>
          <div class="col-xs-6 col-md-3">
            <%= humanized_money_with_symbol(@item.minimum_sale_price) %>
          </div>
        </div>

        <% if @item.sold? %>
          <div class="row">
            <div class="col-xs-6 col-md-3 col-md-offset-3 form-label">
              Sale Price:
            </div>
            <div class="col-xs-6 col-md-3">
              <%= humanized_money_with_symbol(@item.sale_price) %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="col-xs-12 col-md-4">
        <% if @item.sold? %>
          <%= image_tag("sold.png") %>
        <%# elsif @item.donated? %>
          <!-- Donated to <%= @item.charity.name %><br /> -->
          <%#= image_tag(@item.charity.photo_url(:thumb), class: "img-rounded") %>
        <% else %>
          <button type="button" class="btn btn-raised btn-primary" data-toggle="modal" data-target="#mark-as-sold-modal">Mark as Sold</button>
          <%= render 'mark_as_sold_modal' %>
        <% end %>
      </div>

    </div>

    <%= form_for @item, class: "form-horizontal" do |f| %>
      <div class="text-center">
        <div class="panel panel-primary large-top-margin">
          <div class="panel-heading"><h4>Initial Photos</h4></div>
          <div class="panel-body">
            <% if @item.initial_photos.present? %>
              <div class="row text-center large-top-margin grid">
                <div class="grid-sizer col-xs-12 col-sm-6 col-md-4"></div>
                <% @item.initial_photos.each do |photo| %>
                  <div class="grid-item col-xs-12 col-sm-6 col-md-4">
                    <%= image_tag photo.photo_url(:thumb), class: "img-rounded" %></br></br>
                  </div>
                <% end %>
              </div>
            <% end %>

            <%= f.file_field :initial_photos, multiple: true, class: "dropzone" %>

          </div>
        </div>

        <div class="panel panel-primary large-top-margin">
          <div class="panel-heading"><h4>Listing Photos</h4></div>
          <div class="panel-body">
            <% if @item.listing_photos.present? %>
              <div class="row text-center large-top-margin grid">
                <div class="grid-sizer col-xs-12 col-sm-6 col-md-4"></div>
                <% @item.listing_photos.each do |photo| %>
                  <div class="grid-item col-xs-12 col-sm-6 col-md-4">
                    <%= image_tag photo.photo_url(:thumb), class: "img-rounded" %></br></br>
                  </div>
                <% end %>
              </div>
            <% end %>

            <%= f.file_field :listing_photos, multiple: true, class: "dropzone" %>

          </div>
        </div>

        <%= f.submit class: "btn btn-raised btn-primary" %>

      </div>
    <% end %>

    <br>
    <div class="row">
      <div class="col-md-4 col-md-offset-4 text-center">
        <%= @item.barcode.html_safe %>
      </div>
    </div>

    <br>
    <div class="row">
      <div class="text-center">
        <%= link_to "Print Tag <i class='fa fa-caret-right'></i>".html_safe, item_tag_path(@item, format: :pdf), class: "btn btn-raised btn-primary" %>
      </div>
    </div>

  </div>
</div>
