<%= direct_upload_form_for @uploader, class: "form-horizontal" do |f| %>
  <div class="row form-row">
    <div class="text-center">
      <div class="col-xs-12 col-md-3 form-label">
        <%= f.label :archive, class: "control-label" %>
      </div>
      <div class="col-xs-12 col-md-9 text-left">
        <%= f.file_field :archive, class: "dropzone form-control" %>
      </div>
      <%= f.submit "Process Items", class: "btn btn-raised btn-primary" %>
    </div>
  </div>
<% end %>
