<% cache item do %>
  <div class="card card-product card-plain">
    <%= link_to item_path(item) do %>
      <%= image_tag(item.featured_photo.photo_url(client_hints: true, width: "auto", dpr: "auto", responsive_placeholder: "blank", fetch_format: "auto", quality: "auto", gravity: "auto", aspect_ratio: "3:4", crop: "fill"), class: "img img-raised img-rounded") %>
    <% end %>

    <div class="card-content">
      <h4 class="card-title">
        <%= link_to item.description.titleize, item_path(item) %>
      </h4>
      <div class="footer price text-center">
        <%= humanized_money_with_symbol(item.listing_price) %>
      </div>
    </div>
  </div>
<% end %>
