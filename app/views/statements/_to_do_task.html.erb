<div class="modal fade" tabindex="-1" role="dialog" id="statement-<%= statement.id %>-task-modal">
  <div class="modal-dialog">
    <%= form_for [statement.account, statement], remote: true do |f| %>
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">
            <%= link_to "<i class='material-icons md-48'>account_balance_wallet</i> #{statement.account.full_name} -  #{statement.date.last_month.strftime('%B, %Y')}".html_safe, account_statement_path(statement.account, statement) %>
          </h4>
        </div>
        <div class="modal-body">

          <div class="row vertical-align">

            <div class="col-xs-5">
              <%= render 'statements/summary', statement: statement %>
            </div>

            <div class="col-xs-6 col-xs-offset-1">
              <div class="form-group">
                <div class="checkbox">
                  <%= f.label :status do %>
                    <%= f.check_box :status, value: "paid" %> Paid
                  <% end %>
                </div>
              </div>
              <div class="form-group label-floating">
                <%= f.label :check_number, class: "control-label" %>
                <div class="input-group">
                  <%= f.number_field :check_number, class: "form-control" %>
                </div>
              </div>
            </div>
          </div>

        </div>
        <div class="modal-footer">
          <%= f.submit class: "btn btn-raised btn-primary" %>
        </div>
      </div><!-- /.modal-content -->
    <% end %>
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
