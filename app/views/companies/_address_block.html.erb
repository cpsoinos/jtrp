<div class="location">
  <address>
    <strong><%= @company.name %>, LLC</strong><br>
    <%= @company.address_1 %><br>
    <%= @company.city %>, <%= @company.state %> <%= @company.zip %><br>
    <%= @company.phone %><br>
    <%= link_to @company.website, @company.website %>
  </address>

  <strong><%= @company.primary_contact.full_name %></strong>, Owner<br>
  <a href="mailto:<%= @company.primary_contact.email %>"><%= @company.primary_contact.email %></a>
</div>
