<div class="page-header header-filter clear-filter background-image" data-parallax="active"></div>

<div class="row over-background">
  <div class="col-xs-12 text-center">
    <h1 class="company-title"><%= @company.name %></h1>
    <h4><%= @company.slogan %></h4>
  </div>
</div>

<div class="main main-raised extra-large-top-margin">
  <div class="container">

    <div class="features large-top-margin">
			<div class="row text-center">
				<div class="col-md-4">
          <a href="<%= categories_path %>">
            <div class="info">
              <div class="icon icon-info">
                <i class="material-icons">store</i>
              </div>
              <h4 class="info-title">Shop</h4>
              <p>Browse through our store to find just the right piece for your home, or for just about any space. Our inventory is constantly changing!</p>
            </div>
          </a>
				</div>

				<div class="col-md-4">
					<div class="info">
						<div class="icon icon-success">
							<i class='fa fa-credit-card-alt' aria-hidden='true'></i>
						</div>
						<h4 class="info-title">Sell</h4>
						<p>Downsizing? Moving? Sell us your furniture!</p>
					</div>
				</div>

				<div class="col-md-4">
					<div class="info">
						<div class="icon icon-danger">
							<i class="material-icons">supervisor_account</i>
						</div>
						<h4 class="info-title">Consign</h4>
						<p>Downsizing or moving, but not sure you want to sell your furniture outright? Consign with us!</p>
					</div>
				</div>
      </div>
		</div>

  </div>

  <div class="row categories-row">
    <div class="col-xs-10 col-xs-offset-1 col-md-8 col-md-offset-2">
      <%= render 'categories/category_selector' %>
    </div>
  </div>

  <div class="row extra-large-top-margin">
    <div class="col-xs-10 col-xs-offset-1 col-md-8 col-md-offset-2 text-center">
      <h2>Some of Our Items</h2>

      <% unless @featured_photos.empty? %>
        <div class="card card-raised card-carousel">
          <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <div class="carousel slide" data-ride="carousel">

              <!-- Indicators -->
              <ol class="carousel-indicators hidden-xs">
                <% @featured_photos.each_with_index do |_photo, index| %>
                  <li data-target="#carousel-example-generic" data-slide-to="<%= index %>" class=""></li>
                <% end %>
              </ol>

              <!-- Wrapper for slides -->
              <div class="carousel-inner">
                <div class="item active">
                  <%= image_tag(@featured_photos.first.photo_url(quality: "auto", fetch_format: :auto, effect: :improve), class: "img-rounded img-responsive img-raised") %>
                </div>
                <% if @featured_photos.length > 1 %>
                  <% @featured_photos[1..-1].each do |photo| %>
                    <% cache photo do %>
                      <div class="item">
                        <%= image_tag(photo.photo_url(quality: "auto", fetch_format: :auto, effect: :improve), class: "img-rounded img-responsive img-raised") %>
                      </div>
                    <% end %>
                  <% end %>
                <% end %>
              </div>

              <!-- Controls -->
              <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                <i class="material-icons">keyboard_arrow_left</i>
              </a>
              <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                <i class="material-icons">keyboard_arrow_right</i>
              </a>
            </div>
          </div>
        </div>
      <% end %>

    </div>

  </div>

</div>

<div class="main main-raised extra-large-top-margin extra-large-bottom-margin large-bottom-padding">

  <div class="container">
		<div class="row">
			<div class="col-md-6 text-center">
        <h2 class="title">Send us a message</h2>
				<p class="description">You can contact us with anything related to our services. We'll get in touch with you as soon as possible.<br><br>
				</p>

        <div class="fb-page" data-href="https://www.facebook.com/justtherightpiece/" data-tabs="messages" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/justtherightpiece/" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/justtherightpiece/">Just the Right Piece</a></blockquote></div>

			</div>

    	<div class="col-md-4 col-md-offset-2">
      	<div class="info info-horizontal">
					<div class="icon icon-primary">
						<i class="material-icons">pin_drop</i>
					</div>
					<div class="description">
						<h4 class="info-title">Find our store</h4>
						<p><%= @company.address_1 %><br>
              <%= @company.city %>, <%= @company.state %> <%= @company.zip %><br>
						</p>
					</div>
      	</div>
        <div class="info info-horizontal">
					<div class="icon icon-primary">
						<i class="material-icons">phone</i>
					</div>
					<div class="description">
						<h4 class="info-title">Give us a call</h4>
						<p>
              <%= number_to_phone(@company.phone) %><br>
              Wed - Fri, 10:00am-7:00pm<br />
              Sat - Sun, 10:00am-5:00pm<br />
              Mon - Tues Closed
						</p>
					</div>
      	</div>
      	<div class="info info-horizontal">
  				<div class="icon icon-primary">
  					<i class="material-icons">email</i>
  				</div>
          <div class="description">
            <h4 class="info-title">Shoot us an email</h4>
            <p>
              <%= mail_to 'carole@justtherightpiece.furniture' %>
            </p>
          </div>
      	</div>
      </div>
    </div>
  </div>

</div>
