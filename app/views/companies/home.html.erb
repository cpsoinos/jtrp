<% meta @meta_tags %>

<div class="page-header header-filter header-small" data-parallax="true" style="background-image: url('https://res.cloudinary.com/dkmy7znbr/image/asset/f_auto,o_30,q_100/v1469316403/facebook_banner-d9df3338d6da60c9c04aadcb38989da3.jpg');">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="brand">
          <h1 class="title"><%= @company.name %></h1>
          <h4 class="title"><%= @company.slogan %></h4>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="main main-raised">
  <div class="section">
    <div class="container">
      <h2 class="section-title title">Just a few of our items...</h2>
      <div class="row">
        <%= render 'companies/featured_items', items: @featured_items %>
      </div>
    </div>
  </div>
  <!-- section -->

  <!-- <div class="section"> -->
    <div class="container">
      <h2 class="section-title title">Find what you need...</h2>
      <div class="row">

        <!-- Categories -->
        <div class="col-md-12">

          <div class="row">
            <% @categories.primary.each do |category| %>
              <div class="col-md-3">
                <div class="card card-product card-plain" data-colored-shadow="false">
                  <div class="card-image">
                    <%= link_to image_tag(category.photo_url(
                      client_hints: true,
                      transformation: [
                        {gravity: "auto", aspect_ratio: "3:4", crop: "fill"},
                        {width: "auto:100:387", crop: "scale"}
                      ]
                    )), category_path(category) %>
                  </div>

                  <div class="card-content">
                    <h4><%= link_to category.name.titleize, category_path(category) %></h4>
                    <p class="description">
                      Impeccably tailored in Italy from lightweight navy wool.
                    </p>

                    <div class="footer">
                      <div class="price-container">
                        <span class="price">
                          From <%= humanized_money_with_symbol(category.lowest_price) %>
                        </span>
                      </div>

                    </div>
                  </div>
                </div>
                <!-- end card -->
              </div>
            <% end %>

            <!-- <div class="col-md-3 col-md-offset-4">
              <button rel="tooltip" class="btn btn-rose btn-round">Load more...</button>
            </div> -->

          </div>
        </div>

      </div>

    </div>
  <!-- </div> -->

</div>
<!-- end-main-raised -->

<div class="section section-blog">
  <div class="container">
    <div class="row">

      <div class="col-md-6">
        <div class="card card-background" id="hours-of-operation">
          <div class="card-content">
            <%= link_to "<h3 class='card-title'>Hours of Operation</h3>".html_safe, about_path %>
            <table width="100%">
              <% days = %w(monday tuesday wednesday thursday friday saturday sunday) %>
              <% days.each do |day| %>
                <tr>
                  <td style="padding-left: 20px;"><%= day.titleize %></td>
                  <td style="padding-left: 10px;">
                    <% if @company.hours_of_operation.present? && @company.hours_of_operation[day].present? %>
                      <% if @company.hours_of_operation[day]["open"].present? && @company.hours_of_operation[day]["close"].present? %>
                        <%= @company.hours_of_operation[day]["open"] %> to <%= @company.hours_of_operation[day]["close"] %>
                      <% else %>
                        <em>closed</em>
                      <% end %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </table>
            <%#= link_to "<i class='material-icons'>location_on</i> Get Directions".html_safe, about_path, class: "btn btn-white btn-round" %>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="card card-background" style="background-image: url(<%= @company.maps_url('600x400') %>);">
          <div class="card-content">
            <%= link_to "<h3 class='card-title'>Find Us</h3>".html_safe, about_path %>
            <p class="card-description">
              <%= @company.address_1 %><br>
              <%= @company.city %>, <%= @company.state %> <%= @company.zip %><br>
              <%= @company.phone %><br>
              <%= mail_to @company.primary_contact.email, @company.primary_contact.email, style: "color: white;" %><br>
            </p>
            <%= link_to "<i class='material-icons'>location_on</i> Get Directions".html_safe, about_path, class: "btn btn-white btn-round" %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
<!-- section -->

<div class="subscribe-line subscribe-line-image" data-parallax="true" style="background-image: url('https://res.cloudinary.com/dkmy7znbr/image/asset/f_auto,o_30,q_100/v1469316403/facebook_banner-d9df3338d6da60c9c04aadcb38989da3.jpg');"x>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="text-center">
          <h3 class="title">Subscribe to our Newsletter</h3>
          <p class="description">
            Join our newsletter and get occasional news and updates!
          </p>
        </div>

        <div class="card card-raised card-form-horizontal">
          <div class="card-content">
            <form method="" action="">
              <div class="row">
                <div class="col-sm-8">

                  <div class="input-group">
                    <span class="input-group-addon">
                      <i class="material-icons">mail</i>
                    </span>
                    <div class="form-group is-empty"><input type="email" value="" placeholder="Your Email..." class="form-control">
                      <span class="material-input"></span>
                    </div>
                  </div>
                </div>
                <div class="col-sm-4">
                  <button type="button" class="btn btn-rose btn-block">Subscribe</button>
                </div>
              </div>
            </form>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<footer class="footer footer-black footer-big">
  <%= render "layouts/privacy_policy_modal" %>
