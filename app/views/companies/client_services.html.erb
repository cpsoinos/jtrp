<div class="row">
  <div class="col-md-12">
    <div class="breadcrumbs">
      <ul class="breadcrumb">
        <li><%= link_to "Home", root_path %> <span class="divider"></span></li>
        <li class="active">Client Services</li>
      </ul>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-8 col-md-offset-2">
    <div class="well">
      <% if current_user.try(:internal?) %>
        <span class="hidden-print pull-right">
          <%= link_to "<i>Edit</i>".html_safe, edit_company_path(@company) %>
        </span>
      <% end %>
      <%= @company.description.try(:html_safe) %>
    </div>
  </div>
</div>
