<div class="row">
  <div class="col-xs-12 text-center">
    <h1 class="company-title"><%= @company.name %></h1>
    <h4><%= @company.slogan %></h4>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-8 col-md-offset-2">
    <div class="well">
      <% if current_user.try(:internal?) %>
        <div class="row">
          <%= link_to "<i>Edit</i>".html_safe, edit_company_path(@company), class: "pull-right" %>
        </div>
      <% end %>
      <%= @company.agent_service_rate_schedule.try(:html_safe) %>
    </div>
  </div>
</div>
