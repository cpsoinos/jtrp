<div class="row">
  <div class="col-sm-12 text-center">
    <h1><%= @company.name %></h1>
    <h4><%= @company.description %></h4>
  </div>
</div>

<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-8">
    <div class="pull-right">
      <%= link_to "Add a category <i class='fa fa-plus'></i>".html_safe, new_category_path %>
    </div>
  </div>
</div>

<div class="row">
  <% @categories.each do |category| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <% if category.photo.present? %>
          <%= image_tag(category.photo.thumb.url) %>
        <% end %>
        <% if current_user.internal? %>
          <div class="pull-right">edit</div>
        <% end %>
        <div class="caption">
          <h3><%= link_to category.name, category_path(category) %></h3>
          <p>Find just the right piece for your <%= category.name %>.</p>
          <p><a href="#" class="btn btn-primary" role="button">Browse</a></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
