<div class="container">

  <div class="row">
    <div class="col-md-12">
      <div class="breadcrumbs">
  	    <ul class="breadcrumb">
          <li><a href="index.html">Home</a> <span class="divider"></span></li>
          <li class="active">Contact Us</li>
        </ul>
    	</div>
  	</div>
  </div>

  <div class="row">
    <div class="col-md-12">
    	<h2>Contact Us</h2>
  	</div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div id="map">
        <p>Enable your JavaScript!</p>
      </div>
    </div>
  </div>

  <div class="row">

  	<div class="col-md-6">
  		<div class="contact_form">
        <%= form_tag contact_us_path do %>
          <fieldset class="form-group label-floating">
            <label>Name<span class="required">*</span></label>
            <input type="text" placeholder="Name" class="form-control">
            <label>Email<span class="required">*</span></label>
            <input type="text" placeholder="Email" class="form-control">
            <label>Subject<span class="required">*</span></label>
            <input type="text" placeholder="Subject" class="form-control">
          </fieldset>

  			<div class="form-group">
  				<label>Message<span class="required">*</span></label>
  				<textarea rows="3" class="form-control"></textarea>
  			</div>
  			<p class="form-group">
  				<button class="btn btn-primary" type="button">Send Request</button>
  			</p>
        <% end %>
  		</div>
  	</div>

  	<div class="col-md-6">
  		<div class="location">
  			<address>
  			  <strong><%= @company.name %>, LLC</strong><br>
  			  <%= @company.address_1 %><br>
  			  <%= @company.city %>, <%= @company.state %> <%= @company.zip %><br>
  			  <abbr title="Phone">P:</abbr> <%= @company.phone %>
  			</address>

  			<address>
  			  <strong><%= @company.primary_contact.full_name %></strong><br>
  			  <a href="mailto:#"><%= @company.primary_contact.email %></a>
  			</address>
  		</div>
  	</div>

  </div>

</div>
