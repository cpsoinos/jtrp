<div class="container">

  <div class="row">
    <div class="col-md-12">
      <div class="breadcrumbs">
        <ul class="breadcrumb">
          <li><a href="<%= dashboard_path %>">Dashboard</a> <span class="divider"></span></li>
          <li class="active">Edit</li>
        </ul>
      </div>
    </div>

  </div>

  <div class="row">
    <div class="col-md-12">
      <h2><%= @company.name %></h2>
    </div>
  </div>

  <%= form_for @company, html: {class: "loginbox form-horizontal"} do |f| %>
    <div class="row">
      <div class="col-md-6">

        <div class="form-group">
          <%= f.label :name, class: "control-label col-md-4" %>
          <div class="col-md-8">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :hours_of_operation, class: "control-label col-md-4" %>
          <div class="col-md-8">
            <%= f.fields_for :hours_of_operation do |ff| %>

              <% [:monday, :tuesday, :wednesday, :thursday, :friday, :saturday, :sunday].each do |day| %>
                <div class="row">
                  <%= ff.label day, class: "control-label col-md-4" %>
                  <%= ff.fields_for day do |fff| %>
                    <div class="col-md-4">
                      <%= fff.text_field :open, placeholder: "open", class: "form-control" %>
                    </div>
                    <div class="col-md-4">
                      <%= fff.text_field :close, placeholder: "close", class: "form-control" %>
                    </div>
                  <% end %>
                </div>
                <br />
              <% end %>

            </div>

          </div>
        <% end %>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :address_1, class: "control-label col-md-4" %>
          <div class="col-md-8">
            <%= f.text_field :address_1, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :address_2, class: "control-label col-md-4" %>
          <div class="col-md-8">
            <%= f.text_field :address_2, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :city, class: "control-label col-md-4" %>
          <div class="col-md-8">
            <%= f.text_field :city, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :state, class: "control-label col-md-4" %>
          <div class="col-md-8">
            <%= f.text_field :state, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :zip, class: "control-label col-md-4" %>
          <div class="col-md-8">
            <%= f.text_field :zip, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :phone, class: "control-label col-md-4" %>
          <div class="col-md-8">
            <%= f.phone_field :phone, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :website, class: "control-label col-md-4" %>
          <div class="col-md-8">
            <%= f.url_field :website, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :logo, class: "control-label col-md-4" %>
          <div class="col-md-8 text-center">
            <% if @company.logo.present? %>
              <div style="margin-bottom: 10px;">
                <%= image_tag(@company.logo_url(:thumb)) %>
              </div>
            <% end %>
            <label class="btn btn-default btn-raised btn-file">
              Browse <%= f.file_field :logo, class: "hidden" %>
            </label>
          </div>
        </div>

      </div>


    <div class="row text-center">
      <%= f.submit "Save", class: "btn btn-raised btn-primary" %>
    </div>

  <% end %>

  </div>

</div>
