<div class="container-fluid">

  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header card-header-icon" data-background-color="rose">
          <i class="material-icons">perm_identity</i>
        </div>
        <div class="card-content">
          <h4 class="card-title">Edit <%= @company.name %> -
            <small class="category">Complete your company profile</small>
          </h4>

          <%= form_for @company do |f| %>
            <div class="row">

              <div class="col-md-4">
                <div class="form-group label-floating">
                  <%= f.label :name, class: "control-label" %>
                  <%= f.text_field :name, class: "form-control" %>
                </div>
              </div>

              <div class="col-md-4">
                <div class="form-group label-floating">
                  <%= f.label :website, class: "control-label" %>
                  <%= f.url_field :website, class: "form-control" %>
                </div>
              </div>

              <div class="col-md-4">
                <div class="form-group label-floating">
                  <%= f.label :phone, class: "control-label" %>
                  <%= f.phone_field :phone, class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group label-floating">
                  <%= f.label :address_1, class: "control-label" %>
                  <%= f.text_field :address_1, class: "form-control" %>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group label-floating">
                  <%= f.label :address_2, class: "control-label" %>
                  <%= f.text_field :address_2, class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-4">
                <div class="form-group label-floating">
                  <%= f.label :city, class: "control-label" %>
                  <%= f.text_field :city, class: "form-control" %>
                </div>
              </div>

              <div class="col-md-4">
                <div class="form-group label-floating">
                  <%= f.label :state, class: "control-label" %>
                  <%= f.text_field :state, class: "form-control" %>
                </div>
              </div>

              <div class="col-md-4">
                <div class="form-group label-floating">
                  <%= f.label :zip, class: "control-label" %>
                  <%= f.text_field :zip, class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-4">
                <div class="form-group label-floating">
                  <%= f.label :slogan, class: "control-label" %>
                  <%= f.text_area :slogan, rows: 3, class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12">
                <div class="form-group label-floating">
                  <%= f.label :description, "About Us", class: "control-label" %>
                  <%= f.text_area :description, rows: 5, class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12">
                <div class="form-group label-floating">
                  <%= f.label :consignment_policies, "About Us", class: "control-label" %>
                  <%= f.text_area :consignment_policies, data: { provider: "summernote" } %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12">
                <div class="form-group label-floating">
                  <%= f.label :service_rate_schedule, "Service Rate Schedule", class: "control-label" %>
                  <%= f.text_area :service_rate_schedule, data: { provider: "summernote" } %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12">
                <div class="form-group label-floating">
                  <%= f.label :agent_service_rate_schedule, "Service Rate Schedule for Agents", class: "control-label" %>
                  <%= f.text_area :agent_service_rate_schedule, data: { provider: "summernote" } %>
                </div>
              </div>
            </div>

            <%= f.submit "Save", class: "btn btn-raised btn-rose pull-right" %>
            <div class="clearfix"></div>

          <% end %>

        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card card-profile">
        <div class="card-avatar">
          <%= link_to root_path do %>
            <%= image_tag(@company.logo_url(fetch_format: "jpg")) %>
          <% end %>
        </div>

        <div class="card-content">
          <h6 class="category text-gray">Hours of Operation</h6>

          <%= form_for @company do |f| %>
            <%= f.fields_for :hours_of_operation do |ff| %>
              <% [:monday, :tuesday, :wednesday, :thursday, :friday, :saturday, :sunday].each do |day| %>
                <div class="row">
                  <%= ff.label day, class: "control-label col-md-4" %>
                  <%= ff.fields_for day do |fff| %>
                  <div class="col-md-4">
                    <%= fff.text_field :open, placeholder: "open", class: "form-control" %>
                  </div>
                  <div class="col-md-4">
                    <%= fff.text_field :close, placeholder: "close", class: "form-control" %>
                  </div>
                  <% end %>
                </div>
                <br/>
              <% end %>
            <% end %>
            <%= f.submit "Update", class: "btn btn-rose btn-raised pull-right" %>
          <% end %>

        </div>
      </div>
    </div>

  </div>


</div>
